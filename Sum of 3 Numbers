#include <iostream>
using namespace std;

void readnumber(int& mark1, int& mark2, int& mark3) {
    cout << "Enter your marks:\n";
    cout << "Mark 1: ";
    cin >> mark1;
    cout << "Mark 2: ";
    cin >> mark2;
    cout << "Mark 3: ";
    cin >> mark3;
}

int sum3marks(int mark1, int mark2, int mark3) {
    return mark1 + mark2 + mark3;
}

int main() {
    int mark1, mark2, mark3;
    readnumber(mark1, mark2, mark3);
    int total = sum3marks(mark1, mark2, mark3); // احسب المجموع
    cout << "The total sum of your marks is: " << total << endl; // اطبع النتيجة
    return 0;
}
